<%- layout('layout/boilerplate.ejs') %>
<body class="bg-white">
  <div class="container mx-auto p-4">
    <div class="bg-gray-50 p-6 rounded-lg shadow-md">
      <h1 class="text-3xl font-semibold mb-6 text-center">User Profile</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <h2 class="text-xl font-semibold mb-2"><%= data.username %></h2>
          <p id="userName" class="text-lg font-medium"></p>
        </div>

        <div>
          <h2 class="text-xl font-semibold mb-2"><%= data.email %></h2>
          <p id="userEmail" class="text-lg font-medium"></p>
        </div>
      </div>

      <!-- Example: Displaying user posts -->
      <div class="mt-8">
        <h3 class="text-xl font-semibold mb-4">User Posts</h3>
        <ul id="userPosts" class="list-disc pl-6">
          <% for(post of data.posts){ %>
          <li>
            Post <%= post.content %> <br />
            Id <%= post._id %> &nbsp;|
            <a href="/post/edit/<%= post.id %>">Edit</a> &nbsp;|
            <form
              action="/post/<%= post.id %>?_method=DELETE"
              method="post"
              class="inline"
            >
              <button>Delete</button>
            </form>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</body>
