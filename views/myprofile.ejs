<%- layout('layout/boilerplate.ejs') %>
<body class="bg-white">
  <div class="container mx-auto p-4">
    <div class="bg-gray-50 p-6 rounded-lg shadow-md">
      <h1 class="text-3xl font-semibold mb-6 text-center">My Profile</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <h2 class="text-xl font-semibold mb-2">Username :  <%= data.username %></h2>
          <p id="userName" class="text-lg font-medium"></p>
        </div>

        <div>
          <h2 class="text-xl font-semibold mb-2">Email :<%= data.email %></h2>
          <p id="userEmail" class="text-lg font-medium"></p>
        </div>
      </div>

      <!-- Example: Displaying user posts -->
      <div class="mt-8">
        <h3 class="text-3xl font-semibold mb-6 text-center">Your Activity</h3>
        <div id="userPosts" class="flex flex-wrap -mx-4">
          <% for(post of data.posts){ %>
          <div class="w-1/2 sm:w-1/2 md:w-1/3 lg:w-1/3 xl:w-1/3 px-4 mb-6">
            <div
              class="bg-white p-6 rounded-lg shadow-md transition-transform hover:scale-105"
            >
              <p class="text-gray-800 text-lg mb-2">
                <span class="font-semibold">Title:</span> <%= post.title%>
              </p>
              <p class="text-gray-600 mb-2">
                <span class="font-semibold">Blog:</span> <%= post.content %>
              </p>
              <div class="flex items-center">
                <a
                  href="/post/edit/<%= post.id %>"
                  class="text-blue-500 hover:underline mr-4 transition-colors"
                  ><i class="fa-regular fa-pen-to-square"></i
                ></a>
                <form
                  action="/post/<%= post.id %>?_method=DELETE"
                  method="post"
                  class="inline ms-6"
                >
                  <button
                    class="text-red-500 hover:underline transition-colors"
                  >
                    <i class="fa-regular fa-trash-can"></i>
                  </button>
                </form>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>
